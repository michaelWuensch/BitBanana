        android:summary="@string/settings_featureCoinControl_summary"
        android:title="@string/settings_featureCoinControl"
        app:iconSpaceReserved="false" />
        -->
    <SwitchPreference
        android:defaultValue="false"
        android:key="featurePeers"
        android:summary="@string/settings_featurePeers_summary"
        android:title="@string/settings_featurePeers"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="featureSignVerify"
        android:summary="@string/settings_featureSignVerify_summary"
        android:title="@string/sign_verify"
        app:iconSpaceReserved="false" />

