<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AmountView">
        <attr name="switchesValueOnClick" format="boolean" />
        <attr name="styleBasedOnValue" format="boolean" />
        <attr name="isWithoutUnit" format="boolean" />
        <attr name="showLabel" format="boolean" />
        <attr name="canBlur" format="boolean" />
        <attr name="setLabelText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="subscribeToPrefChange" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BBInputFieldView">
        <attr name="inputLabel" format="string" />
        <attr name="inputLabelDetails" format="string" />
        <attr name="showHelpButton" format="boolean" />
        <attr name="defaultInputValue" format="string" />
        <attr name="helpButtonText" format="string" />
        <attr name="minLines" format="integer" />
        <attr name="maxLines" format="integer" />
        <attr name="maxLinesFocused" format="integer" />
    </declare-styleable>

    <declare-styleable name="BBExpandablePropertyView">
        <attr name="label" format="string" />
        <attr name="value" format="string" />
        <attr name="explanation" format="string" />
        <attr name="hasLine" format="boolean" />
        <attr name="isAmountDetail" format="boolean" />
    </declare-styleable>
</resources>