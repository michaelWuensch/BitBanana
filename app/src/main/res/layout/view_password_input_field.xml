<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirmPasswordLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <app.michaelwuensch.bitbanana.customView.BBInputFieldView
        android:id="@+id/passwordInputFieldPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputLabelDetails=""
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/passwordInputFieldPasswordVisibilityToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp"
        android:src="@drawable/outline_visibility_off_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/gray" />

</androidx.constraintlayout.widget.ConstraintLayout>